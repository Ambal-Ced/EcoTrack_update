@model IEnumerable<ecos.Models.ElectricityRecord>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElectricityRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalBill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Month)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseholdName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElectricityRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBill)
            </td>
                <td>
                    @item.Month.ToString("MM/dd/yyyy")
                </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
